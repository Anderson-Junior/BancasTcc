@model GerenciamentoBancasTcc.Domains.Entities.Filial

@{
    ViewData["Title"] = "Detalhes";
}

<div>
    <a asp-action="Index" style="text-decoration: none; color: #EEA084;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
            <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg> Voltar para lista
    </a>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card" style="border: solid 2px #e5e5e5;">
                <div class="card-header text-center" style=" background-color: #94DDDE; color: #fff; font-size: 18px">
                    <b>Detalhes da Filial</b>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Campus)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Campus)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cnpj)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cnpj)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Telefone)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Telefone)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Endereco)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Endereco)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Ativo)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Ativo)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Instituicao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Instituicao.Nome)
                        </dd>
                    </dl>

                    <a asp-action="Edit" asp-route-id="@Model.FilialId" class="btn btn-primary stretched-link">Editar</a>

                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>