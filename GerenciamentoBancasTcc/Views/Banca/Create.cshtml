@model GerenciamentoBancasTcc.Domains.Entities.Banca

@{
    ViewData["Title"] = "Create";
}
@if (TempData["mensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["mensagemErro"]
    </div>
}
@section Styles {
    <link rel="stylesheet" href="~/css/select-pure.css" />
}

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card" style="border: solid 2px #2F5578;">
                <div class="card-header text-center" style=" background-color: #73A0B9; color: #fff; font-size: 18px">
                    <b>Cadastrar Banca</b>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" id="alunosBanca" name="alunosBanca" value="@ViewBag.AlunosBanca" />
                        <div class="form-group">
                            <label class="control-label">Curso - Selecione para filtrar as turmas</label>
                            <select class="form-control" id="CursoId" asp-items="ViewBag.CursoId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="TurmaId" class="control-label"></label>
                            <select asp-for="TurmaId" class="form-control"></select>
                            <span asp-validation-for="TurmaId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="select-pure" class="control-label">Alunos</label>
                            <span id="select-pure" asp-validation-for="AlunosBancas"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tema" class="control-label"></label>
                            <input asp-for="Tema" class="form-control" />
                            <span asp-validation-for="Tema" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsuarioId" class="control-label"></label>
                            <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataHora" class="control-label"></label>
                            <input asp-for="DataHora" class="form-control" />
                            <span asp-validation-for="DataHora" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sala" class="control-label"></label>
                            <input asp-for="Sala" class="form-control" />
                            <span asp-validation-for="Sala" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descricao" class="control-label">Descrição (Opcional)</label>
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/select-pure.min.js" type="text/javascript"></script>
    <script src="~/js/banca-create-edit.js" type="text/javascript"></script>
}
