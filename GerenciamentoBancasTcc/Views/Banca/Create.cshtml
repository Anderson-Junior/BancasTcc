@model GerenciamentoBancasTcc.Domains.Entities.Banca

@{
    ViewData["Title"] = "Create";
}
@if (TempData["mensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["mensagemErro"]
    </div>
}
@section Styles {
    <link rel="stylesheet" href="~/css/select-pure.css" />
}

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card" style="border: solid 2px #2B4B82;">
                <div class="card-header text-center" style=" background-color: #94DDDE; color: #fff; font-size: 18px">
                    <b>Cadastrar Banca</b>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" id="alunosBanca" name="alunosBanca" value="@ViewBag.AlunosBanca" />
                        <div class="form-group">
                            <label class="control-label">Curso - Selecione para filtrar as turmas</label>
                            <select class="form-control" id="CursoId" asp-items="ViewBag.CursoId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="TurmaId" class="control-label"></label>
                            <select asp-for="TurmaId" class="form-control"></select>
                            <span asp-validation-for="TurmaId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="select-pure" class="control-label">Alunos</label>
                            <span id="select-pure" asp-validation-for="AlunosBancas"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tema" class="control-label"></label>
                            <input asp-for="Tema" class="form-control" />
                            <span asp-validation-for="Tema" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsuarioId" class="control-label"></label>
                            <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                        </div>
                        <label class="control-label">Escolha 3 opções de data para a banca</label>
                        <div class="form-group">
                            <input class="form-control" type="date" asp-for="PrimeiroDia" />
                            <span asp-validation-for="PrimeiroDia" class="text-danger"></span>
                            <br />
                            <input class="form-control" type="date" asp-for="SegundoDia" />
                            <span asp-validation-for="SegundoDia" class="text-danger"></span>
                            <br />
                            <input class="form-control" type="date" asp-for="TerceiroDia" />
                            <span asp-validation-for="TerceiroDia" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Selecione os horários em que deve ocorrer a banca</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="PrimeiroHorario" value="true" id="primeiro-horario">
                                <label class="form-check-label" asp-for="PrimeiroHorario">
                                    19:00 às 19:50
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="SegundoHorario" value="true" id="segundo-horario">
                                <label class="form-check-label" asp-for="SegundoHorario">
                                    19:50 às 20:40
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="TerceiroHorario" value="true" id="terceiro-horario">
                                <label class="form-check-label" asp-for="TerceiroHorario">
                                    21:00 às 21:50
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sala" class="control-label"></label>
                            <input asp-for="Sala" class="form-control" />
                            <span asp-validation-for="Sala" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descricao" class="control-label">Descrição (Opcional)</label>
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/select-pure.min.js" type="text/javascript"></script>
    <script src="~/js/banca-create-edit.js" type="text/javascript"></script>

    <script type="text/javascript">

        var TurmaId = $("#TurmaId").val();





    </script>
}
