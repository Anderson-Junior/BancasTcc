@model GerenciamentoBancasTcc.Models.BancaViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <!-- CSS Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Meus estilos -->
    <link rel="stylesheet" href="~/css/index.css">

</head>
<body>
    <div class="container align-items-center">

        <div class="card">
            <div class="card-header text-center" style=" background-color: #73A0B9; color: #fff; font-size: 18px">
                <h5>@Html.DisplayFor(modelItem => Model.Tema)</h5>
            </div>
            <div class="card-body">
                <div>
                    
                    <div>
                        <p><b>Data/Hora:</b> @Model.DataHora.ToString("dd/MM/yyyy HH:mm")</p>
                        <p><b>Curso:</b> @Model.Curso</p>
                        <p><b>Turma:</b> @Model.Turma</p>
                        <p><b>Orientador:</b>  @Model.Orientador</p>
                        <p><b>Professores:</b> @string.Join(", ", Model.Professores)</p>
                        <p><b>Sala:</b> @Model.Sala</p>
                        @*<p><b>Alunos:</b> @string.Join(", ", item.Alunos)</p>*@
                    </div>
                    <div>
                        @if (!string.IsNullOrEmpty(Model.ArquivoId.ToString()))
                        {
                            <p><b>Anexos</b></p>
                            <table id="data_table" class="table table-striped table-bordered">
                                <tbody>
                                    <tr>
                                        <td>
                                            <a asp-action="Visualizar" class="btn btn-primary btn-sm" asp-route-id="@Model.ArquivoId" target="_blank">Visualizar Documentação</a>
                                        </td>
                                        <td>
                                            <a asp-action="#" class="btn btn-primary btn-sm">Avaliar</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        }
                    </div>
                    <div>
                        <p><b>Aprensetação</b></p>
                        <table id="data_table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Aluno
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var aluno in Model.Alunos)
                                {
                                    <tr>
                                        <td>
                                            @aluno.Nome
                                        </td>

                                        <td>
                                            <a asp-action="#" class="btn btn-primary btn-sm">Avaliar Apresentação</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div>
                        <p><b>Resumo de notas</b></p>
                        <table id="data_table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Aluno
                                    </th>
                                    <th>
                                        Nota Documentação
                                    </th>
                                    <th>
                                        Nota Apresentação
                                    </th>
                                    <th>
                                        Média Final
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var aluno in Model.Alunos)
                                {
                                    <tr>
                                        <td>
                                            @aluno.Nome
                                        </td>

                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        
    </div>


    <!-- Script JQuery-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!-- JS Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>