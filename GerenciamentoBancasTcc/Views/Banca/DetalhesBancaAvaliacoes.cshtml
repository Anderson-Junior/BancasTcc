@model GerenciamentoBancasTcc.Models.BancaViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <!-- CSS Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Meus estilos -->
    <link rel="stylesheet" href="~/css/index.css">

</head>
<body>
    <div class="container align-items-center">

        <div class="card">
            <div class="card-header text-center" style=" background-color: #94DDDE; color: #fff; font-size: 22px">
                <p class="mb-0">@Html.DisplayFor(modelItem => Model.Tema)</p>
            </div>
            <div class="card-body">
                <div>

                    <div>
                        <p><b>Data/Hora:</b> @Model.DataHora.ToString("dd/MM/yyyy HH:mm")</p>
                        <p><b>Curso:</b> @Model.Curso</p>
                        <p><b>Turma:</b> @Model.Turma</p>
                        <p><b>Orientador:</b>  @Model.Orientador</p>
                        <p><b>Professores:</b> @string.Join(", ", Model.Professores)</p>
                        <p><b>Sala:</b> @Model.Sala</p>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary btn-sm" id="teste" data-toggle="modal" data-target="#exampleModal">
                            Convidar Professores
                        </button>
                    </div>
                    <div>
                        @if (Model.Arquivos?.Count > 0)
                        {
                            <p><b>Anexos</b></p>
                            <table id="data_table" class="table table-striped table-bordered">
                                <tbody>
                                    @foreach (var arquivo in Model.Arquivos)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-action="Visualizar" class="btn btn-primary btn-sm" asp-route-id="@arquivo.ArquivosId" target="_blank">Visualizar Documentação</a>
                                            </td>
                                            <td>
                                                <a asp-action="#" class="btn btn-primary btn-sm">Avaliar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                    <div>
                        <p><b>Aprensetação</b></p>
                        <table id="data_table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Aluno
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var aluno in Model.Alunos)
                                {
                                    <tr>
                                        <td>
                                            @aluno.Nome
                                        </td>

                                        <td>
                                            <a asp-action="#" class="btn btn-primary btn-sm">Avaliar Apresentação</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div>
                        <p><b>Resumo de notas</b></p>
                        <table id="data_table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Aluno
                                    </th>
                                    <th>
                                        Nota Documentação
                                    </th>
                                    <th>
                                        Nota Apresentação
                                    </th>
                                    <th>
                                        Média Final
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var aluno in Model.Alunos)
                                {
                                    <tr>
                                        <td>
                                            @aluno.Nome
                                        </td>

                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                        <td>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Convidar professores para a banca</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive">
                        <table id="tableProfessores" class="table table-hover table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th id="nome">Nome</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="1">
                                        <ul class="pagination pull-right"></ul>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a asp-action="#" class="btn btn-primary btn-sm" id="btn-convidar">Convidar</a>
                </div>
            </div>
        </div>
    </div>


    <!-- Script JQuery-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!-- JS Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
</body>
</html>

<script>
    $('#myModal').on('shown.bs.modal', function () {
        $('#myInput').trigger('focus')
    });

    var cols =
        [
            { data: "nome" },
        ];

    $('#tableProfessores').DataTable({
        language: {
            sEmptyTable: "Nenhum registro encontrado",
            sInfo: "",
            sInfoEmpty: "",
            sInfoFiltered: "(Filtrados de MAX registros)",
            sInfoPostFix: "",
            sInfoThousands: ".",
            sLengthMenu: "MENU  Resultados por página",
            sLoadingRecords: "Carregando...",
            sProcessing: "Processando...",
            sZeroRecords: "Nenhum registro encontrado",
            sSearch: "Pesquisar",
            oPaginate: {
                sNext: "Próximo",
                sPrevious: "Anterior",
                sFirst: "Primeiro",
                sLast: "Último"
            },
            oAria: {
                sSortAscending: ": Ordenar colunas de forma ascendente",
                sSortDescending: ": Ordenar colunas de forma descendente"
            }
        },
        columns: cols,
        bLengthChange: false,
        bPaginate: false,
        pageLength: 15,
        searching: false,
        sorting: false,
    });

    $('#teste').click(function () {
        $.ajax({
            type: 'GET',
            url: "/Banca/Professores",
            complete: function () {
                $('#tableProfessores').resize();
            },
            success: function (response) {
                console.log(response);

                var table = $('#tableProfessores').DataTable();
                table.clear();
                table.rows.add(response).draw();
            }
        });
    });



</script>