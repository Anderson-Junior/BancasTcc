@model IEnumerable<GerenciamentoBancasTcc.Domains.Entities.Banca>

@{
    ViewData["Title"] = "Bancas";
}

@section Styles {
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        Lista de bancas
        <a asp-action="Create">Nova Banca</a>
    </div>
    <div class="card-body">
        <table id="data_table" class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Curso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tema)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UsuarioId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataHora)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sala)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Curso.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tema)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataHora)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sala)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.BancaId" class="btn btn-sm btn-primary" title="Editar banca"><i class="fa fa-edit fa-fw"></i></a>
                            <a asp-action="Details" asp-route-id="@item.BancaId" class="btn btn-sm btn-primary" title="Detalhes banca"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.BancaId" class="btn btn-sm btn-primary _remove" title="Excluir banca"><i class="fa fa-remove fa-fw"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        handleDataTables();
    </script>
}