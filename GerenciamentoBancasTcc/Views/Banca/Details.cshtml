@model GerenciamentoBancasTcc.Domains.Entities.Banca

@{
    ViewData["Title"] = "Detalhes Banca";
}


<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card" style="border: solid 2px #2F5578;">
                <div class="card-header text-center" style=" background-color: #73A0B9; color: #fff; font-size: 18px">
                    <b>Detalhes da Banca</b>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TurmaId)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Turma.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Tema)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Tema)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.UsuarioId)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Usuario.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DataHora)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DataHora)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Sala)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Sala)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>
                    </dl>

                    <a asp-action="Edit" asp-route-id="@Model.BancaId" class="btn btn-primary stretched-link">Editar</a>

                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
