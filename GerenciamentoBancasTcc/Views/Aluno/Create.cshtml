@model GerenciamentoBancasTcc.Domains.Entities.Aluno

@{
    ViewData["Title"] = "Create";
}

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card" style="border: solid 2px #2F5578;">
                <div class="card-header text-center" style=" background-color: #73A0B9; color: #fff; font-size: 18px">
                    <b>Cadastrar Alunos</b>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label class="control-label">Curso - Selecione para filtrar as turmas</label>
                            <select class="form-control" id="CursoId" asp-items="ViewBag.CursoId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="TurmaId" class="control-label">Turma</label>
                            <select class="form-control" id="TurmaId" asp-for="TurmaId"></select>
                            <span asp-validation-for="TurmaId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Matricula" class="control-label"></label>
                            <input asp-for="Matricula" class="form-control" />
                            <span asp-validation-for="Matricula" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/select-pure.min.js" type="text/javascript"></script>
    <script src="~/js/banca-create-edit.js" type="text/javascript"></script>
}
