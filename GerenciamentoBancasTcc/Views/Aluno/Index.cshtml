@model IEnumerable<GerenciamentoBancasTcc.Domains.Entities.Aluno>

@{
    ViewData["Title"] = "Alunos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        Lista de alunos
        <a asp-action="Create" class="btn btn-primary">Novo Aluno</a>
    </div>
    <div class="card-body">
        <table id="data_table" class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ativo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Turma)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ativo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Turma.Nome)
                        </td>
                        <td style="width: 130px">
                            <a asp-action="Edit" asp-route-id="@item.AlunoId" class="btn btn-sm btn-primary" title="Editar aluno"><i class="fa fa-edit fa-fw"></i></a>
                            <a asp-action="Details" asp-route-id="@item.AlunoId" class="btn btn-sm btn-primary" title="Detalhes aluno"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.AlunoId" class="btn btn-sm btn-primary _remove" title="Excluir aluno"><i class="fa fa-remove fa-fw"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        handleDataTables();
    </script>
    <script>


     if (@TempData["mensagemSucesso"] != null)
     {
         setTimeout(function() { alert(@TempData["mensagemSucesso"]); }, 4000);
     }

    </script>
}