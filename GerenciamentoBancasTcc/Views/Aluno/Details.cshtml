@model GerenciamentoBancasTcc.Domains.Entities.Aluno

@{
    ViewData["Title"] = "Details";
}


<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card" style="border: solid 2px #2F5578;">
                <div class="card-header text-center" style=" background-color: #73A0B9; color: #fff; font-size: 18px">
                    <b>Detalhes do Aluno</b>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Matricula)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Matricula)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Ativo)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Ativo)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Turma)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Turma.TurmaId)
                        </dd>
                    </dl>

                    <a asp-action="Edit" asp-route-id="@Model.AlunoId" class="btn btn-primary stretched-link">Editar</a>

                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
