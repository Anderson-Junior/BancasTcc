@model GerenciamentoBancasTcc.Domains.Entities.Questao

@{
    ViewData["Title"] = "Editar";
}

@if (TempData["mensagemSucesso"] != null)
{
    <div id="message" class="alert alert-success" role="alert">
        @TempData["mensagemSucesso"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["mensagemErro"] != null)
{
    <div id="message" class="alert alert-danger" role="alert">
        @TempData["mensagemErro"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card" style="border: solid 2px #2B4B82;">
                <div class="card-header text-center" style=" background-color: #94DDDE; color: #fff; font-size: 18px">
                    <b>Editar Questão</b>
                </div>
                <div class="card-body">

                    <div class="alert alert-warning" role="alert">
                        Tem certeza que deseja editar a questão?
                    </div>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="QuestaoId" />
                        <div class="form-group">
                            <label asp-for="Pergunta" class="control-label"></label>
                            <input asp-for="Pergunta" class="form-control" />
                            <span asp-validation-for="Pergunta" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TipoQuestaoId" class="control-label"></label>
                            <select asp-for="TipoQuestaoId" class="form-control" asp-items="ViewBag.TipoQuestaoId"></select>
                            <span asp-validation-for="TipoQuestaoId" class="text-danger"></span>
                        </div>
                        @*<div class="form-group">
                                <label asp-for="FormularioId" class="control-label"></label>
                                <select asp-for="FormularioId" class="form-control" asp-items="ViewBag.FormularioId"></select>
                                <span asp-validation-for="FormularioId" class="text-danger"></span>
                            </div>*@
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                        </div>
                    </form>
                    </
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
