@model GerenciamentoBancasTcc.Domains.Entities.Formulario

@{
    ViewData["Title"] = "Deletar Formulário";
}

<div>
    <a asp-action="Index"> <i class="fa-solid fa-circle-arrow-left"></i> Voltar para lista</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="card" style="border: solid 2px #e5e5e5; ">
                <div class="card-header text-center" style=" background-color: #94DDDE; color: #fff; font-size: 18px">
                    <b>Deletar Formulário</b>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        Tem certeza que deseja deletar este formulário?
                    </div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Curso)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Curso.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Usuario)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Usuario.Nome)
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="FormularioId" />
                        <input type="submit" value="Deletar" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>