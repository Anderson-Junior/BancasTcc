@model IEnumerable<GerenciamentoBancasTcc.Domains.Entities.Instituicao>

@{
    ViewData["Title"] = "Instituições";
}

@section Styles {
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        Lista de instituições
        <a asp-action="Create" class="btn btn-primary">Nova Instituição</a>
    </div>
    <div class="card-body">
        <table class="table table-hover table-striped table-bordered" id="data_table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ativo)
                    </th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ativo)
                        </td>
                        <td style="width: 130px">
                            <a asp-action="Edit" asp-route-id="@item.InstituicaoId" class="btn btn-sm btn-primary" title="Editar instituição"><i class="fa fa-edit fa-fw"></i></a>
                            <a asp-action="Details" asp-route-id="@item.InstituicaoId" class="btn btn-sm btn-primary" title="Detalhes instituição"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.InstituicaoId" class="btn btn-sm btn-primary _remove" title="Excluir instituição"><i class="fa fa-remove fa-fw"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.print.min.js"></script>
    <script type="text/javascript">
        handleDataTables();
    </script>
}