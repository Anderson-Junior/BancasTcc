@model IEnumerable<GerenciamentoBancasTcc.Domains.Entities.Convite>

@{
    ViewData["Title"] = "Convites";
}

@section Styles {
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
}
@if (TempData["mensagemSucesso"] != null)
{
    <div id="message" class="alert alert-success" role="alert">
        @TempData["mensagemSucesso"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["mensagemErro"] != null)
{
    <div id="message" class="alert alert-danger" role="alert">
        @TempData["mensagemErro"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        Convites recebidos
    </div>
    <div class="card-body">
        <table id="data_table" class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StatusConvite)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataHoraAcao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QuantidadeAceites)
                    </th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatusConvite)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataHoraAcao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuantidadeAceites)
                        </td>
                        <td style="width: 130px">
                            <a asp-action="Convite" asp-route-id="@item.BancaId" class="btn btn-sm btn-primary" title="Ver detalhes do convite"><i class="fa fa-edit fa-fw"></i></a>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        handleDataTables();
    </script>
}