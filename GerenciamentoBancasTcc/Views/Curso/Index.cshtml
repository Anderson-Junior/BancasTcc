@model IEnumerable<GerenciamentoBancasTcc.Domains.Entities.Curso>

@{
    ViewData["Title"] = "Cursos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
}
@if (TempData["mensagemSucesso"] != null)
{
    <div id="message" class="alert alert-success" role="alert">
        @TempData["mensagemSucesso"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["mensagemErro"] != null)
{
    <div id="message" class="alert alert-danger" role="alert">
        @TempData["mensagemErro"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        Lista de cursos
        <a asp-action="Create" class="btn btn-primary">Novo Curso</a>
    </div>
    <div class="card-body">
        <table id="data_table" class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Periodos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ativo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Filial)
                    </th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Periodos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ativo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Filial.Campus)
                        </td>
                        <td style="width: 130px">
                            <a asp-action="Edit" asp-route-id="@item.CursoId" class="btn btn-sm btn-primary" title="Editar curso"><i class="fa fa-edit fa-fw"></i></a>
                            <a asp-action="Details" asp-route-id="@item.CursoId" class="btn btn-sm btn-primary" title="Detalhes curso"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.CursoId" class="btn btn-sm btn-primary _remove" title="Excluir curso"><i class="fa fa-remove fa-fw"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        handleDataTables();
    </script>
}