@model IEnumerable<GerenciamentoBancasTcc.Domains.Entities.Equipe>

@{
    ViewData["Title"] = "Equipes";
}

<h1>Equipes</h1>

<p>
    <a asp-action="Create">Cadastrar uma nova equipe</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Banca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Banca.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EquipeId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.EquipeId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.EquipeId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
